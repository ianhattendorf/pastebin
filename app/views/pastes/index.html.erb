<div class="row">
  <div class="col-sm-10">
    <h2>New Paste</h2>
    <%= render 'paste_form', object: @paste %>
  </div>
  <div class="pastes col-sm-2">
    <h2>Public Pastes</h2>
    <ul class="pastes-menu fa-ul">
      <%= render @pastes %>
    </ul>
    <% if user_signed_in? %>
      <h2>My Pastes</h2>
      <ul class="pastes-menu fa-ul">
        <%= render @my_pastes %>
      </ul>
    <% end %>
  </div>
</div>
