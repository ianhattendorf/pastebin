<div class="row">
  <div class="col-sm-10">
    <h2>New Paste</h2>
    <%= form_for @paste, role: 'form' do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <div class="form-group">
        <%= f.label :content %>
        <%= f.text_area :content, rows: '10', class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control' %>
      </div>

      <%= f.submit 'Submit', class: 'btn btn-primary' %>
    <% end %>
  </div>
  <div class="pastes col-sm-2">
    <h2>Pastes</h2>

    <ul class="pastes-menu">
      <%= render @pastes %>
    </ul>
  </div>
</div>
